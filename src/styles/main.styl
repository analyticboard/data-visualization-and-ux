.bespoke-slide
  perspective: 600px
  top: 50% !important
  font-family: 'Lato'
  p,h1
    margin-top 0.5em
    margin-bottom 0.5em

.bespoke-backdrop-active
  opacity: 1

pre
  text-align: left

code[class*="language-"],
pre[class*="language-"]
  color: #333
  font-family: monaco, andale mono !important
  line-height: 150%
  font-size: 30px
  text-shadow: none

.token.punctuation
  color: #333

.token.operator,
.token.entity,
.token.url,
.language-css .token.string,
.style .token.string,
.token.variable
  color: #333

.token.selector,
.token.attr-name,
.token.string,
.token.char,
.token.builtin,
.token.inserted
  color: #07F

.token.atrule,
.token.attr-value
  color: #00FF51

cascade(index)
  .1s + (index * .1s)

.cascade
  & > *
    transition: all .1s ease
    transform: translateZ(0)
    opacity: 1
    .bespoke-active &,
    .bespoke-active&
      transition-delay: cascade(0)
      &:nth-child(2)
        transition-delay: cascade(1)
      &:nth-child(3)
        transition-delay: cascade(2)
      &:nth-child(4)
        transition-delay: cascade(3)
      &:nth-child(5)
        transition-delay: cascade(4)
      &:nth-child(6)
        transition-delay: cascade(5)
      &:nth-child(7)
        transition-delay: cascade(6)
    .bespoke-after &,
    .bespoke-after&
      transform: translateZ(0) translateY(15px)
      opacity: 0
      &.avatar
        transform: translateZ(0) translateY(15px) scale(1.2) rotateX(30deg)



